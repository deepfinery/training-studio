    {
      "name": "Training",
      "item": [
        {
          "name": "Create training job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{id_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"demo-run\",\n  \"clusterId\": \"{{cluster_id}}\",\n  \"spec\": {\n    \"baseModel\": {\n      \"provider\": \"huggingface\",\n      \"modelName\": \"meta-llama/Llama-2-7b\",\n      \"revision\": \"main\",\n      \"authToken\": \"{{hf_token}}\"\n    },\n    \"customization\": {\n      \"method\": \"qlora\",\n      \"rank\": 16,\n      \"targetModules\": [\"q_proj\", \"v_proj\"],\n      \"loraAlpha\": 32,\n      \"loraDropout\": 0.05,\n      \"trainableLayers\": [\"decoder.layers.0\"],\n      \"precision\": \"bf16\",\n      \"qlora\": {\n        \"use_double_quant\": true,\n        \"bnb_4bit_compute_dtype\": \"bfloat16\"\n      },\n      \"peft\": {\n        \"use\": true,\n        \"config\": { \"task_type\": \"CAUSAL_LM\" }\n      }\n    },\n    \"resources\": {\n      \"gpus\": 4,\n      \"gpuType\": \"A100\",\n      \"cpus\": 16,\n      \"memoryGb\": 128,\n      \"maxDurationMinutes\": 720\n    },\n    \"datasets\": [\n      {\n        \"source\": \"{{dataset_uri}}\",\n        \"format\": \"jsonl\"\n      }\n    ],\n    \"artifacts\": {\n      \"logUri\": \"s3://bucket/logs/job-id/\",\n      \"outputUri\": \"{{output_uri}}\"\n    },\n    \"tuningParameters\": {\n      \"learning_rate\": 0.0002,\n      \"batch_size\": 64,\n      \"num_epochs\": 3,\n      \"warmup_ratio\": 0.1\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/training",
              "host": ["{{base_url}}"],
              "path": ["api", "training"]
            }
